<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.min.css" />
</head>
<body>

    <div class="d-flex">
        <div class="bg-dark text-white p-3 vh-100" style="width: 250px;">
            <h5>Pages</h5>
            <a asp-controller="Home" asp-action="Index" class="d-block nav-link">Home</a>
            <a asp-controller="Player" asp-action="Index" class="d-block nav-link">Players</a>
            <a asp-controller="Team" asp-action="Index" class="d-block nav-link">Teams</a>
            <!--This is where links to future pages will go-->
        </div>

        <div class="flex-grow-1 p-4">
            <header class="p-4 mb-3 bg-light border">
                <h1>My Pickleball APP</h1>
            </header>
            @RenderBody()
        </div>
    </div>

</body>
</html>